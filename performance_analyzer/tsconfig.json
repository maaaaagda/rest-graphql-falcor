{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "lib": ["es7", "dom"],
      "moduleResolution": "node",
      "outDir": "dist",
      "sourceMap": true,
      "strict": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "types": ["node", "reflect-metadata"],
      "skipLibCheck": true,
      "noUnusedLocals": false
    },
    "exclude": [
      "tslint",
      "__tests__/KiwSearchFlight"
    ]
}
